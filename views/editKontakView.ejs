<% layout("layout/boilerplate") %>
<h1>Ubah Kontak</h1>
<form action="/api/contact/<%= kontak._id %>?_method=PUT" method="POST">
        <div class="input-group">
            <label for="firstName">Nama Depan</label>
            <input type="text" id="firstName" name="kontak[firstName]" placeholder="Nama Depan" value="<%= kontak.firstName %>" required>
        </div>
        <div class="input-group">
            <label for="lastName">Nama Belakang (Opsional)</label>
            <input type="text" id="lastName" name="kontak[lastName]" placeholder="Nama Belakang" value="<%= kontak.lastName %>">
        </div>
        <div class="input-group">
            <label for="phoneNumber">No Telepon</label>
            <input type="number" id="phoneNumber" name="kontak[phoneNumber]" placeholder="Nomor Telepon" value="<%= kontak.phoneNumber %>">
        </div>
        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="kontak[email]" placeholder="Email" value="<%= kontak.email %>">
        </div>
        <button type="submit">Simpan</button>
</form>

<a href="/"><button>Kembali</button></a>


